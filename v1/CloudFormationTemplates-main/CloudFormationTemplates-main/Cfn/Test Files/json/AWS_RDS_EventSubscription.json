{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "myEventSubscription": {
            "Type": "AWS::RDS::EventSubscription",
            "Properties": {
                "EventCategories": [
                    "configuration change",
                    "failure",
                    "deletion"
                ],
                "SnsTopicArn": "arn:aws:sns:us-west-2:123456789012:example-topic",
                "SourceIds": [
                    "db-instance-1",
                    {
                        "Ref": "myDBInstance"
                    }
                ],
                "SourceType": "db-instance",
                "Enabled": "true"
            }
        }
    }
}